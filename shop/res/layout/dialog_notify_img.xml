<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notify_img_relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:background="#ffffff" >

    <ImageView
        android:id="@+id/notify_img_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/notify_img_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notify_img_img"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/notify_img_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/notify_img_tv"
        android:layout_centerHorizontal="true"
        android:background="@color/gray"
        android:minWidth="300dip" />

    <TextView
        android:id="@+id/notify_img_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notify_img_line"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dip"
        android:background="@color/orange"
        android:gravity="center"
        android:minHeight="40dip"
        android:minWidth="150dip"
        android:text="キャンセル"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</RelativeLayout>